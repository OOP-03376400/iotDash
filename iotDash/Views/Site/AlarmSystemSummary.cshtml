@model iotDash.Models.AlarmSystemListModel 

@*@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}*@

@Scripts.Render("~/bundles/jqueryui")



@if (Model != null)
{
    foreach (var dev in Model.AlarmDevices)
    {
        <ul class="list-group">

            <li class="list-group-item">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-2">
                            <span class="glyphicon glyphicon-text-size" aria-hidden="true"></span>
                        </div>
                        <div class="col-md-6">
                            @dev.DeviceName
                        </div>
                    </div>
                </div>
            </li>
        </ul>

        <a class="btn btn-info" role="button" href="@Url.Action("Index", "AlarmSystemView", new { ServerId = dev.Id })">Details</a>

    }

}



